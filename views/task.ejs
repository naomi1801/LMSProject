<!DOCTYPE html>
<html lang="en" class="h-100">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <style>
      * {
        box-sizing: border-box;
      }

      body {
        margin: 0px;
        font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS",
          sans-serif;
      }

      header h1 {
        text-align: center;
        font-size: 40px;
        color: white;
      }

      header {
        padding: 40px;
        background-color: rgb(192, 6, 46);
      }

      nav {
        background-color: #333;
        overflow: hidden;
      }

      nav a {
        text-decoration: none;
        padding: 20px;
        text-align: center;
        float: left;
        color: white;
      }

      main {
        margin: auto;
        display: flex;
        flex-direction: row;
        flex: 50%;
        width: 100%;
        border: 1.5px solid grey;
        border-radius: 2px;
        padding: 20px;
      }

      h2 {
        padding: 20px;
      }

      section:nth-child(even) {
        background-color: rgb(241, 241, 241);
      }

      section {
        min-height: 100vh;
      }

      video {
        padding: 10px;
      }

      iframe {
        height: 75vh;
      }

      img {
        padding: 10px;
      }

      section h5 {
        margin: 40px;
      }

      footer {
        background-color: #333;
        overflow: hidden;
        position: absolute;
        left: 0;
        bottom: 0;
        width: 100%;
      }

      footer a {
        text-decoration: none;
        text-align: center;

        color: white;
      }

      footer p {
        text-decoration: none;
        padding: 20px;
        text-align: center;

        color: white;
      }

      /* Style inputs */
      input[type="text"],
      select,
      textarea,
      .mb-3,
      input[type="password"],
      input[type="email"] {
        width: 100%;
        padding: 20px;
        margin-top: 6px;
        margin-bottom: 16px;
        resize: vertical;
      }

      #emailHelp {
        margin-bottom: 5px;
        color: red;
        text-align: center;
        font-size: 12px;
      }

      .btn-primary {
        background-color: #c48805;
        color: white;
        padding: 12px 20px;
        border: none;
        cursor: pointer;
      }

      .btn-primary:hover {
        background-color: #45a049;
      }

      /* Style the container/contact section */
      .container {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 10px;
        width: 100%;
      }

      /* Create two columns that float next to eachother */
      .column {
        float: left;
        width: 50%;
        margin-top: 6px;
        padding: 20px;
      }

      /* Clear floats after the columns */
      .row:after {
        content: "";
        display: table;
        clear: both;
      }

      /* Responsive layout - when the screen is less than 600px wide, make the two columns stack on top of each other instead of next to each other */
      @media screen and (max-width: 600px) {
        .column,
        .btn-primary {
          width: 100%;
          margin-top: 0;
        }
      }
    </style>

    <title>Home</title>
  </head>

  <body>
    <div>
      <header><h1>Task</h1></header>

      <nav>
        <a class="nav-link" aria-current="page" href="/homePage">Home</a>
        <a class="nav-link" href="/userprofile">Profile</a>
        <a class="nav-link active" href="/task">Add Task</a>
        <a class="nav-link" href="/course">Your Course</a>
        <a class="nav-link" href="/logout" style="float: right">Logout</a>
      </nav>

      <main class="px-3">
        <form action="/task" method="POST">
          <div class="mb-3" style="margin-left: 30px">
            <label for="exampleInputEmail1" class="form-label"
              >Enter String</label
            >
            <input
              type="text"
              name="content"
              class="form-control"
              id="exampleInputEmail1"
              aria-describedby="emailHelp"
            />

            <input
              type="checkbox"
              class="form-check-input"
              id="exampleCheck1"
              name="comp"
            />
            <label class="form-check-label" for="exampleCheck1"
              >Mark as completed</label
            >

            <button type="submit" class="btn btn-primary mt-4 p-2">
              Add Task
            </button>
          </div>
        </form>

        <div class="container background mt-3" style="margin-left: 30px">
          <ul class="list-group mt-3">
            <% Tasks.forEach(details=> { %>
            <li
              class="list-group-item"
              style="
                list-style: none;
                font-family: 'Franklin Gothic Medium', sans-serif;
              "
            >
              <span class="item-name"> <%= details.content %> </span>
              <span class="item-name"> <%= details.iscomplete %> </span>
              <button
                style="margin-left: 10px"
                href="task/edit/<%= details._id %>"
                type="button"
                class="btn btn-info btn1"
              >
                Edit
              </button>
              <button
                style="margin-left: 10px"
                href="/task/remove/<%= details._id %>"
                type="button"
                class="btn btn-danger btn1"
              >
                Delete
              </button>
            </li>
            <% }) %>
          </ul>
        </div>
      </main>
      <footer>
        <p>
          Project for
          <a href="https://stige.tech/" class="text-white">StigeTask</a>
        </p>
      </footer>
    </div>
  </body>
</html>
